;+---------------------------------------------------------------------------
; RAMFOS
; Следующая страница
;
; На входе
;  b - страница
;
; На выходе
;  jc - ошибка
;  b  - страница
;
; 2013-11-01 Дизассемблировано vinxru
;----------------------------------------------------------------------------

pageNext:	; У ROM-диска (код 0x80) может быть только одна страница, выходим с флагом C
		mov	a, b
		ral
		rc
		rar

		; Отфильтровываем флаги
#if ARAM_MAX_PAGE <= 7
		ani	7
#else
		ani	0Fh
#endif
		; Максимум страниц
		mov	c, a
		inr	c
		lda	v_aramMaxPage
		cmp	c
		rc

		; Увеличиваем страницу
		inr	b
		ret