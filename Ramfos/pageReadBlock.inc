;+---------------------------------------------------------------------------
; RAMFOS
; Чтение блока данных из ДОЗУ/ПЗУ
;
; На входе:
;  hl - откуда, адрес в ДОЗУ/ПЗУ
;  de - куда, адрес в памяти
;  bc - длина-1
;
; 2013-11-01 Дизассемблировано vinxru
;----------------------------------------------------------------------------

pageReadBlock:  ; Прочитать байт 
		push	b		  
		 call	pageRead
		 inx	h
		 mov	a, c
		pop	b
		; Сохранить байт
		stax	d
		inx	d
		; if(bc == 0) break;
		mov	a, c
		ora	b
		; bc--
		dcx	b
		jnz	pageReadBlock
		ret
